EAPI=7

inherit qmake-utils

DESCRIPTION="{{ desc }}"
HOMEPAGE="{{ homepage  }}"
SRC_URI="{{ artifacts[0].src_uri }}"

LICENSE="CC-BY-2.5 CC-BY-SA-2.5 CC-BY-SA-3.0 CC0-1.0 GPL-2 GPL-3+ LGPL-3"
SLOT="0"
KEYWORDS="*"

post_src_unpack() {
	if [ ! -d "${S}" ]; then
		mv "${WORKDIR}"/{{github_user}}-{{github_repo}}* "${S}" || die
	fi
}

src_prepare() {
	default
		sed -i -e 's/make/$(MAKE)/' Makefile || die
}
